<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.GroupFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/z_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="?attr/toolbarcolor"
        android:elevation="4dp"
        app:contentInsetStart="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_alignParentStart="true"
                android:textColor="?attr/siyahyazÄ±"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="@string/tab_backyard"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:id="@+id/profileusernametext"
                />



            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                app:corner_radius="10dp"
                android:layout_centerVertical="true"
                android:padding="1dp"
                android:background="@drawable/search_backgroud"
                android:layout_toStartOf="@+id/appoptions"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/profileusernametext">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/groupsearchripple"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginStart="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:src="@drawable/ic_search_in_bar"
                            android:id="@+id/searchicon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/searchicon"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="@string/searchgroups"/>
                    </RelativeLayout>
                </RelativeLayout>

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="50dp"
                app:corner_radius="25dp"
                android:id="@+id/appoptions"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/appoptionsripple"
                    android:background="?attr/selectableItemBackground"

                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="9dp"
                        android:layout_height="match_parent"
                        android:src="?attr/icsettings"/>
                </RelativeLayout>
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>



</RelativeLayout>
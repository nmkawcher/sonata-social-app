<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.takwolf.android.aspectratio.AspectRatioLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:arl_heightRatio="1"
        app:arl_widthRatio="1">

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:corner_radius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:id="@+id/upload_post_image"/>
        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:corner_radius="16dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="#BDBDBD"
            android:id="@+id/upload_post_cancel"
            android:layout_gravity="top|start">

            <ImageView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cancel"/>

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bottom_left_corner_radius="10dp"
            app:bottom_right_corner_radius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/upload_post_edit"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cropimage"/>

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    </com.takwolf.android.aspectratio.AspectRatioLayout>



</RelativeLayout>
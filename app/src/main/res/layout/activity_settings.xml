<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.sonata.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/z_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="?attr/toolbarcolor"
        android:elevation="4dp"
        app:contentInsetStart="10dp"
        app:layout_collapseMode="pin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="50dp"
                app:corner_radius="25dp"
                android:id="@+id/backbutton"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/backbuttonbutton"
                    android:background="?attr/selectableItemBackground"

                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="6dp"
                        android:layout_height="match_parent"
                        android:src="?attr/icback"/>
                </RelativeLayout>
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_toEndOf="@+id/backbutton"
                android:textColor="?attr/siyahyaz覺"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="@string/settings"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:id="@+id/profileusernametext"
                />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <ScrollView
        android:layout_width="match_parent"
        android:background="?attr/recyclerbackground"
        android:layout_height="match_parent"
        android:layout_below="@id/z_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:gravity="start|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/account"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blockedaccounts"
                    android:background="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_blocked_accounts"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/blockedaccounticon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/blockedaccounts"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/blockedaccounticon"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pendingfollowreqs"
                    android:background="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_pending_follow_reqs"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/pendingfollowreqicon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pendingfollowreqs"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/pendingfollowreqicon"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/likedposts"
                    android:background="?attr/selectableItemBackground"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_like"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/likedposticon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/likedposts"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/likedposticon"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/yourcomments"
                    android:background="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_comment"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/yourcommenticon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/yourcomments"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/yourcommenticon"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/savedposts"
                    android:background="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_saved_posts"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/savedposticon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/savedposts"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/savedposticon"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/savedcomments"
                    android:background="?attr/selectableItemBackground"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/savedcommenticonlayout"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_saved_posts"
                                android:id="@+id/savedcommenticon"/>

                            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:corner_radius="7.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:background="?attr/beyazbackground"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_comment"/>

                            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

                        </RelativeLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/savedcomments"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/savedcommenticonlayout"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvbnhh"
                    android:layout_height="52.5dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_type"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/ppico"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounttype"
                        android:gravity="start"
                        android:id="@+id/vvghty"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/ppico"
                        android:textStyle="bold"
                        android:textColor="?attr/siyahyaz覺"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/vvghty"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/settingsaccountypespinner"/>



                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ifyouselect"
                    android:gravity="start"
                    android:layout_below="@+id/cvbnhh"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="18dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:id="@+id/praclayout"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_lock"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/privateaccounticon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privaccount"
                        android:gravity="start"
                        android:layout_toStartOf="@+id/settingprivateaccountswitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/privateaccounticon"
                        android:textStyle="bold"
                        android:textColor="?attr/siyahyaz覺"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/settingprivateaccountswitch"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/changeusername"
                    android:background="?attr/selectableItemBackground"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="3dp"
                            android:src="@drawable/ic_at_settings"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/changeusernameicon"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/changeusername"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/changeusernameicon"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7.5dp"
                android:gravity="start|center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/appsettings"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/darkmode"
                        android:gravity="start"
                        android:layout_toStartOf="@+id/settingnightmodeswitch"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="25dp"
                        android:textStyle="bold"
                        android:textColor="?attr/siyahyaz覺"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/settingnightmodeswitch"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/opensourcelicences"
                    android:background="?attr/selectableItemBackground"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/opensourcelicences"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"
                            android:textColor="?attr/siyahyaz覺"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?attr/beyazbackground"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="7.5dp"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/logout"
                    android:background="?attr/selectableItemBackground"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            android:textStyle="bold"
                            android:textColor="#ff0000"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>





        </LinearLayout>

    </ScrollView>






</RelativeLayout>

